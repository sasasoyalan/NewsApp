<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sssoyalan.newsapp.ui.fragments.NewsFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_news" >
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.sssoyalan.newsapp.ui.fragments.SavedFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_saved" >
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.sssoyalan.newsapp.ui.fragments.UsersFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_users" >
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.sssoyalan.newsapp.ui.fragments.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" >
    </fragment>
</navigation>